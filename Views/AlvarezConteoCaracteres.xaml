<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Alvarez_AppApuntes.Views.AlvarezConteoCaracteres"
             Title="AlvarezConteoCaracteres">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Label Text="Ingrese una cadena de caracteres:" Grid.Row="0"/>
        <Entry x:Name="txtInput" Grid.Row="1"/>

        <Button Text="Calcular" Clicked="OnCalculateClicked" Grid.Row="2"/>
        <Button Text="Limpiar" Clicked="OnClearClicked" Grid.Row="3"/>

        <Label Text="Resultados:" Grid.Row="4"/>
        <Label x:Name="lblNumbers" Grid.Row="5"/>
        <Label x:Name="lblLetters" Grid.Row="6"/>
        <!-- ... Añade labels para las otras estadísticas -->

    </Grid>
</ContentPage>